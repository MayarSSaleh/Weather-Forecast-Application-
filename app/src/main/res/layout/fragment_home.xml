<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".home.view.HomeFragment">
<data>
    <variable
        name="currentWeather"
        type="weather.application.model.WeatherResponse" />

</data>
    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@{currentWeather.city.toString()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/time_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@{currentWeather.list.get(0).dt_txt}"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city_name" />

            <ImageView
                android:id="@+id/icon_image"
                android:layout_width="103dp"
                android:layout_height="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_Weather_description"
                app:layout_constraintTop_toBottomOf="@+id/time_data"
                tools:srcCompat="@tools:sample/avatars"></ImageView>

<!--            ● The current temperature-->

<!--            ● Humidity icon and value-->
<!--            ● Wind speed-->
<!--            ● Pressure-->
<!--            ● Clouds-->


            <TextView
                android:id="@+id/tv_Weather_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/time_data"
                app:layout_constraintVertical_bias="0.488" />
<!--            android:text="@{currentWeather.list.get(0).weather.get(0).description}"-->


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_hours"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="68dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_image" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_hours" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>

